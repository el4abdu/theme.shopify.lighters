        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Product",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %} 