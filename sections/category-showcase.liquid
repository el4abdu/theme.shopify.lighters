<div class="category-showcase" style="background-color: {{ section.settings.background_color }}">
  <div class="page-width">
    <div class="section-header">
      <h2>{{ section.settings.title }}</h2>
      {% if section.settings.subtitle %}
        <p class="subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
    
    <div class="categories-grid" style="grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);">
      {% for block in section.blocks %}
        {% if block.type == 'category' %}
          <div class="category-card" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link }}" class="category-link">
              <div class="category-image">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | img_url: '400x' }}" alt="{{ block.settings.title }}">
                {% else %}
                  <div class="image-placeholder">
                    {% render 'icon-lighter' %}
                  </div>
                {% endif %}
                
                {% if block.settings.show_overlay %}
                  <div class="category-overlay" style="background-color: {{ block.settings.overlay_color }}; opacity: {{ block.settings.overlay_opacity }};">
                    {% if block.settings.show_icon %}
                      <span class="category-icon">{{ block.settings.icon }}</span>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
              
              <div class="category-info" style="text-align: {{ block.settings.text_alignment }}">
                <h3 class="category-title">{{ block.settings.title }}</h3>
                {% if block.settings.show_description %}
                  <p class="category-description">{{ block.settings.description }}</p>
                {% endif %}
                
                {% if block.settings.show_button %}
                  <span class="category-button" style="background-color: {{ block.settings.button_color }}">
                    {{ block.settings.button_text }}
                  </span>
                {% endif %}
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Category Showcase",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Browse our premium selection of smoking accessories"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f9f9f9"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Columns on desktop"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Category title",
          "default": "Premium Lighters"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category link"
        },
        {
          "type": "checkbox",
          "id": "show_description",
          "label": "Show description",
          "default": true
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Explore our collection of premium refillable lighters."
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "checkbox",
          "id": "show_overlay",
          "label": "Show image overlay",
          "default": true
        },
        {
          "type": "color",
          "id": "overlay_color",
          "label": "Overlay color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "min": 0,
          "max": 1,
          "step": 0.1,
          "default": 0.2,
          "label": "Overlay opacity"
        },
        {
          "type": "checkbox",
          "id": "show_icon",
          "label": "Show icon",
          "default": true
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon",
          "default": "ðŸ”¥"
        },
        {
          "type": "checkbox",
          "id": "show_button",
          "label": "Show button",
          "default": true
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop Now"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button color",
          "default": "#ff4400"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Showcase",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %} 