<div class="hero-banner">
  <div class="hero-content page-width">
    <div class="hero-text">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subtext }}</p>
    </div>
    {% if section.settings.banner_image %}
      <div class="hero-image">
        <img src="{{ section.settings.banner_image | img_url: 'master' }}" alt="{{ section.settings.heading }}">
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover our collection"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %} 