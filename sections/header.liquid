<header class="site-header">
  <div class="header-wrapper page-width">
    <div class="menu-toggle">
      <span></span>
      <span></span>
      <span></span>
    </div>
    
    <div class="header-logo">
      {% if section.settings.logo %}
        <a href="/">
          <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
        </a>
      {% else %}
        <a href="/">
          <span class="h1">{{ shop.name }}</span>
        </a>
      {% endif %}
    </div>
    
    <nav class="main-nav desktop-only">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="nav-item">{{ link.title }}</a>
      {% endfor %}
    </nav>
    
    <div class="header-icons">
      <a href="/search" class="icon-search">{% render 'icon-search' %}</a>
      <a href="/cart" class="icon-cart">
        {% render 'icon-cart' %}
        <span class="cart-count">{{ cart.item_count }}</span>
      </a>
    </div>
  </div>
  
  <div class="mobile-nav">
    <nav class="mobile-menu">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="mobile-nav-item">{{ link.title }}</a>
      {% endfor %}
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %} 