{% layout 'theme' %}

<div class="page-width">
  <div class="error-page">
    <div class="error-header">
      <h1>{{ 'general.404.title' | t }}</h1>
      <div class="error-icon">
        <i class="fa-solid fa-circle-exclamation"></i>
      </div>
    </div>
    
    <div class="error-content">
      <p class="error-message">{{ 'general.404.subtext' | t }}</p>
      
      <div class="error-search">
        <p class="search-prompt">{{ 'general.404.search_prompt' | t }}</p>
        <form action="/search" method="get" class="search-form" role="search">
          <div class="search-input-group">
            <input type="search" 
                   name="q" 
                   placeholder="{{ 'general.search.placeholder' | t }}"
                   class="search-input"
                   aria-label="{{ 'general.search.placeholder' | t }}">
            <button type="submit" class="search-button">
              <i class="fa-solid fa-magnifying-glass"></i>
              <span class="visually-hidden">{{ 'general.search.submit' | t }}</span>
            </button>
          </div>
        </form>
      </div>
      
      <div class="error-actions">
        <a href="/" class="button">{{ 'general.404.back_to_home' | t }}</a>
        <a href="/collections/all" class="button button-outline">{{ 'general.404.view_products' | t }}</a>
      </div>
    </div>
  </div>
</div>

<style>
  .error-page {
    padding: 80px 0;
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .error-header {
    margin-bottom: 40px;
  }
  
  .error-icon {
    font-size: 60px;
    color: {{ settings.primary_color }};
    margin-top: 20px;
  }
  
  .error-message {
    font-size: 18px;
    margin-bottom: 30px;
  }
  
  .search-prompt {
    margin-bottom: 15px;
  }
  
  .search-input-group {
    display: flex;
    max-width: 400px;
    margin: 0 auto 40px;
  }
  
  .search-input {
    flex: 1;
    padding: 12px 15px;
    border: 1px solid #ddd;
    border-right: none;
    border-radius: 4px 0 0 4px;
  }
  
  .search-button {
    background: {{ settings.primary_color }};
    color: white;
    border: none;
    padding: 0 20px;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
  }
  
  .error-actions {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }
  
  .button {
    display: inline-block;
    padding: 12px 25px;
    background: {{ settings.primary_color }};
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: background-color 0.2s;
  }
  
  .button:hover {
    background: {{ settings.secondary_color }};
  }
  
  .button-outline {
    background: transparent;
    color: {{ settings.primary_color }};
    border: 1px solid {{ settings.primary_color }};
  }
  
  .button-outline:hover {
    background: rgba(0, 0, 0, 0.05);
  }
  
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }
  
  @media screen and (max-width: 768px) {
    .error-page {
      padding: 60px 20px;
    }
    
    .error-actions {
      flex-direction: column;
      gap: 10px;
    }
  }
</style> 