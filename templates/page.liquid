{% comment %}
  The page template
{% endcomment %}

<div class="page-width">
  <div class="page-container">
    <div class="page-header">
      <h1>{{ page.title }}</h1>
    </div>
    
    <div class="page-content rte">
      {{ page.content }}
    </div>
  </div>
</div>

<style>
  .page-container {
    padding: 60px 0;
  }
  
  .page-header {
    margin-bottom: 30px;
  }
  
  .page-content {
    font-size: 16px;
    line-height: 1.6;
  }
  
  .rte img {
    max-width: 100%;
    height: auto;
  }
  
  @media screen and (max-width: 768px) {
    .page-container {
      padding: 40px 0;
    }
  }
</style> 